    <script>
        // Função para aplicar máscara ao CPF
        function maskCPF(input) {
            let value = input.value.replace(/\D/g, ''); // Remove tudo que não é dígito
            if (value.length > 11) value = value.slice(0, 11); // Limita a 11 dígitos
            value = value.replace(/(\d{3})(\d)/, '$1.$2'); // Coloca ponto após os 3 primeiros dígitos
            value = value.replace(/(\d{3})(\d)/, '$1.$2'); // Coloca ponto após os próximos 3 dígitos
            value = value.replace(/(\d{3})(\d{1,2})$/, '$1-$2'); // Coloca hífen antes dos últimos 2 dígitos
            input.value = value;
        }

        // Função para aplicar máscara ao WhatsApp
        function maskWhatsApp(input) {
            let value = input.value.replace(/\D/g, ''); // Remove tudo que não é dígito
            if (value.length > 11) value = value.slice(0, 11); // Limita a 11 dígitos
            if (value.length > 0) value = '(' + value; // Adiciona parêntese no início
            if (value.length > 3) value = value.slice(0, 3) + ') ' + value.slice(3); // Fecha parêntese e adiciona espaço
            if (value.length > 10) value = value.slice(0, 10) + '-' + value.slice(10); // Adiciona hífen
            input.value = value;
        }

        // Adiciona os eventos quando o documento estiver pronto
        document.addEventListener('DOMContentLoaded', function() {
            const cpfInput = document.getElementById('cpf');
            const whatsappInput = document.getElementById('whatsapp');
            const cpfLoginInput = document.getElementById('cpf_login');

            cpfInput.addEventListener('input', function() {
                maskCPF(this);
            });
            
            cpfLoginInput && cpfLoginInput.addEventListener('input', function() {
                maskCPF(this);
            });

            whatsappInput.addEventListener('input', function() {
                maskWhatsApp(this);
            });
        });
    </script>
