<meta name="ac:route" content="/security/f/login">

<script>
    function formatCPF(input) {
    let value = input.value.replace(/\D/g, '');
    
    if (value.length > 11) {
        value = value.slice(0, 11);
    }
    
    if (value.length > 0) {
        value = value.replace(/(\d{3})(\d)/, '$1.$2');
        value = value.replace(/(\d{3})(\d)/, '$1.$2');
        value = value.replace(/(\d{3})(\d{1,2})$/, '$1-$2');
    }
    
    input.value = value;
}
</script>

<div class="container vh-100">
    <div class="row h-100 align-items-center">
        <div class="col">
            <h1 class="text-center">Sua conta com sucesso!</h1>
            <h4 class="text-center mb-4">Faça seu login para aproveitar nossas ofertas de inaguração</h4>

            <form id="form_login" is="dmx-serverconnect-form" method="post" action="/api/login" dmx-on:error="notifies1.danger('OPS, Ocorreu um erro! Fale com o nosso time para obter ajuda!')" dmx-on:success="browser1.goto('/security/f/area-do-cliente')">
                <div class="form-group mb-3">
                    <h5>Seu CPF</h5>
                    <input type="text" class="form-control form-control-lg" id="cpf_login" name="cpf_login" maxlength="14" pattern="\d{3}\.\d{3}\.\d{3}-\d{2}" oninput="formatCPF(this);" aria-describedby="input1_help">
                </div>
                <div class="form-group mb-3">
                    <button id="btn1" class="btn btn-primary" type="submit">Acessar minha conta</button>
                </div>
            </form>
        </div>
    </div>
</div>